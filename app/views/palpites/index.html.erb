      <th>Time b</th>
      <th>Pontos</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @jogos.each do |jogo| %>
      <tr>
        <td><%= jogo.id %></td>
        <td><%= jogo.time_a %></td>
        <td><%= jogo.gols_a %></td>
        <td> X <%= jogo.gols_b %></td>
